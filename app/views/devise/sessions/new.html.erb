<div class="login-container">
  <h2>Log in</h2>
  <div class="form-container">
    <div class="image-box">
      <img src="https://images.unsplash.com/photo-1524253482453-3fed8d2fe12b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=776&q=80" alt="new channel image">
    </div>
    <div class="form-new-channel">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions our-button">
          <%= f.button :submit, "Log in" %>
        </div>

    <div class="signup-links">
      <%= render "devise/shared/links" %>
    </div>
    <% end %>
    </div>
  </div>
</div>
