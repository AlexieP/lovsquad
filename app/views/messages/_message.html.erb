<div class = "<%= message.user == current_user ? "sender" : "receiver" %>" id="message-<%= message.id %> <%= message.user.id %>">
  <div class="fan-avatar">
    <%= cl_image_tag message.user.profile_picture.key%>
  </div>
  <div class="message-box">
    <small>
      <strong><%= message.user.username %></strong>
      <div class="message-content"><p><%= message.content %></p></div>
      <div class="posted-date"><i><%= message.created_at.strftime("%b %e - %l:%M") %></i></div>
    </small>
  </div>
</div>
