<main>
  <div class="container">
  <!------------------- LEFT -->
    <div class="left">
      <!------------------ creator box -->
      <%= render "shared/creator_box" %>
      <!--------------- online fans -->
      <div class="online-box">
        <h3 class="title-category">FANS</h3>
        <div class="fan-banner">
          <%= render 'shared/online_fan'%>
        </div>
      </div>
    </div>
    <!------------------- MIDDLE -->
    <div class="middle">

      <%# <%= render "shared/tabs" %>

      <div class="tabs" data-controller="tabs">
        <div class="tabs__head">
        <%# --------------------------TABS------------- %>
          <span class="tabs__toggle is-active" data-tabs-target="tab" data-action="click->tabs#switch" id="chat">CHATROOM</span>
          <span class="tabs__toggle" data-tabs-target="tab" data-action="click->tabs#switch" id="feed">FEED</span>
          <span class="tabs__toggle" data-tabs-target="tab" data-action="click->tabs#switch" id="store">REWARD STORE</span>
        </div>
        <div class="tabs__body">
        <%# ----------------------CHATROOM------------- %>
          <div class="tabs__content is-active" data-tabs-target="content" id="chat">
            <%= render "shared/chatbox" %>
            <p>Please respect the rules of the channel, <a href="#">click here</a> to learn more.</p>
          </div>
                  <%# ----------------------FEED------------- %>
          <div class="tabs__content" data-tabs-target="content" id="feed">
            <%= render "shared/feed" %>
          </div>
                  <%# ----------------------REWARD------------- %>
          <div class="tabs__content" data-tabs-target="content" id="store">
            <% @rewards.each do |reward| %>
              <%= render "shared/rewardcard", reward: reward %>
            <% end %>

          </div>
        </div>
      </div>
    </div>
    <!------------------- RIGHT -->
    <div class="right">
      <!--------------- coins -->
      <div class="coin-counter">
        <%= render 'shared/coin_counter'%>
      </div>
      <!--------------- channels -->
      <div class="channel-box">
        <h3 class="title-category">SUBSCRIBED CHANNELS</h3>
        <%= render 'shared/channel_list'%>
      </div>

    </div>
  </div>
</main>
